# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database
DATABASE_URL=postgresql://scraper_user:scraper_pass@localhost:5432/scraper_db

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Scraper Configuration
SCRAPER_USER_AGENT=Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
SCRAPER_TIMEOUT=30
SCRAPER_MAX_RETRIES=3
SCRAPER_RETRY_DELAY=5
SCRAPER_RESPECT_ROBOTS_TXT=True
SCRAPER_DEFAULT_RATE_LIMIT=1
SCRAPER_MAX_CONCURRENT_JOBS=5
SCRAPER_ENABLE_JS_RENDERING=True
SCRAPER_HEADLESS_BROWSER=True

# AI/LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
DEFAULT_AI_MODEL=gpt-4-turbo-preview
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=4096

# Logging
DJANGO_LOG_LEVEL=INFO
